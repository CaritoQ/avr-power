/* cada 5 segundos el sistema desactiva el conversor análogo digital, 
 *cada 8 segundos la comunicación serial y cada 12 segundos un desactivación total 
 */
#include<avr/wdt.h>
#include<MsTimer2.h>

String d="";
int s=0;
void setup() {
  wdt_disable();
  MsTimer2::set(1000,tiempo);
  MsTimer2::stop();
  Serial.begin(9600);
  Serial.println("Ingresar una letra: ");  
}

void loop() {
  
  if(Serial.available()>0){
  d=Serial.readString();
  Serial.println(" ");
  }
  
   if (d=="A"){
      Serial.println("1S");
      MsTimer2::start();
      wdt_enable(WDTO_1S);
      d="";
   }
   if (d=="B"){
      Serial.println("2S");
      MsTimer2::start();
      wdt_enable(WDTO_2S);
      d="";
   }
   if (d=="C"){
      Serial.println("4S");
      MsTimer2::start();
      wdt_enable(WDTO_4S);
      d="";
   }
      if (datos=="D"){
      Serial.println("8S");
      MsTimer2::start();
      wdt_enable(WDTO_8S);
      d="";
    }
}

void tiempo(){
  s++;
    Serial.println(s);
  }
