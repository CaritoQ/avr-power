/* cada 5 segundos el sistema desactiva el conversor an치logo digital, 
 *cada 8 segundos la comunicaci칩n serial y cada 12 segundos un desactivaci칩n total 
 */
#include <avr/wdt.h>
#include <avr/power.h>
#include <TimerOne.h>
#include <EEPROM.h>
#include <LiquidCrystal.h>
int dir = EEPROM.read(0);

int c = 0;
int disp = 5;
int ingreso;

LiquidCrystal lcd(13, 12, 11, 10, 9, 8);

void setup() {
  Timer1.initialize(1000000);
  Timer1.attachInterrupt(conteo);            
  power_all_enable();                      
  lcd.begin(16, 2);
  dir = 0;
  
}

void loop() {
  Serial.println(dir);
  lcd.setCursor(12, 1);
  lcd.print("Duraci칩n:" + String(c));
  dato = analogRead(0);
  lcd.setCursor(0, 1);
  lcd.print(ingreso);

  if (c == 5) {                          
    dir = dir + 1;
    lcd.setCursor(0, 0);
    lcd.print("COAD APAGADO");
    power_adc_disable();
  }
  if (c == 8) {                          l
    lcd.setCursor(0, 0);
    lcd.print("                     ");
    lcd.setCursor(0, 0);
    lcd.print("COM APAGADA");
    power_spi_disable();
  }
  if (c == 12) {                        
    lcd.setCursor(0, 0);
    lcd.print("                    ");
    lcd.setCursor(0, 0);
    lcd.print("SIST APAGADO");
    power_all_disable();
  }
  if (EEPROM.read(0) > 12) {
    dir = 0;
    power_all_enable();
    EEPROM.write(0, dir);
    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print("REINICIAR");
    digitalWrite(disp, HIGH);
    delay(10);
    wdt_enable(WDTO_1S);
  }  
}

void conteo() {
  c++;
}
